<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchMakingFragment"
    android:background="@drawable/matchback">

    <TextView
            android:id="@+id/MatchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match Maker"
            android:textSize="40dp"
            android:paddingVertical="20dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>


    <TextView
            android:id="@+id/instrctText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="20dp"
            android:ems="7"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_toLeftOf="@+id/spinner1"
            android:layout_below="@+id/MatchTitle"/>

    <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:ems="15"
            android:textSize="15sp"
            android:background="#FFB8D8"
            android:entries="@array/zodiac1"
            android:layout_below="@+id/MatchTitle"/>

    <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:entries="@array/zodiac2"
            android:ems="15"
            android:background="#FDA4BA"
            android:layout_toRightOf="@+id/spinner1"
            android:layout_below="@+id/MatchTitle"/>

    <TextView
            android:id="@+id/matchResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="This is the Matchmaking Fragment"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_below="@+id/spinner2"/>


</RelativeLayout>